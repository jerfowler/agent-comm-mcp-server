{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./tests/types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true
  }
}