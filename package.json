{
  "name": "@jerfowler/agent-comm-mcp-server",
  "version": "0.5.0",
  "description": "MCP server for AI agent task communication and delegation with diagnostic lifecycle visibility",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "agent-comm-server": "dist/index.js"
  },
  "scripts": {
    "prebuild": "node scripts/generate-version.cjs",
    "build": "tsc",
    "predev": "node scripts/generate-version.cjs",
    "dev": "tsc --watch",
    "test": "npm run test:unit && npm run test:smoke && npm run test:integration",
    "test:unit": "jest tests/unit --coverage",
    "test:smoke": "jest tests/smoke --testTimeout=30000",
    "test:lifecycle": "jest tests/lifecycle --testTimeout=60000",
    "test:integration": "jest tests/integration --testTimeout=60000",
    "test:e2e": "jest tests/e2e --testTimeout=120000",
    "test:all": "npm run test:unit && npm run test:smoke && npm run test:lifecycle && npm run test:integration && npm run test:e2e",
    "test:quick": "npm run test:unit && npm run test:smoke",
    "test:ci": "npm run test:all --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "type-check": "tsc --noEmit --project tsconfig.all.json",
    "type-check:src": "tsc --noEmit",
    "type-check:tests": "tsc --noEmit --project tsconfig.all.json tests/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint:tests": "eslint tests/**/*.ts",
    "lint:all": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:fix:all": "eslint src/**/*.ts tests/**/*.ts --fix",
    "ci": "npm run type-check && npm run lint:all && npm run test:quick",
    "ci:full": "npm run type-check && npm run lint:all && npm run test:all",
    "clean": "rm -rf dist src/generated",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agent",
    "communication",
    "task-delegation",
    "ai-agents"
  ],
  "author": "Jeremy Fowler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jerfowler/agent-comm-mcp-server.git"
  },
  "homepage": "https://github.com/jerfowler/agent-comm-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/jerfowler/agent-comm-mcp-server/issues"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/minimatch": "^5.1.2",
    "fs-extra": "^11.2.0",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
